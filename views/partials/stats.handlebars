<div class="card bg-light">
    <div class="card-header">
        <h3 class="card-title">
            Stats
        </h3>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-2 col-lg-4 text-left">Images:</div>
            <div class="col-md-10 col-lg-8 text-right">{{ sidebar.stats.images }}</div>
        </div>
        <div class="row">
            <div class="col-md-2 col-lg-5 text-left">Comments:</div>
            <div class="col-md-10 col-lg-7 text-right">{{ sidebar.stats.comments }}</div>
        </div>
        <div class="row">
            <div class="col-md-2 col-lg-4 text-left">Views:</div>
            <div class="col-md-10 col-lg-10 text-right">{{ sidebar.stats.views }}</div>
        </div>
        <div class="row">
            <div class="col-md-2 col-lg-4 text-left">Likes:</div>
            <div class="col-md-10 col-lg-10 text-right">{{ sidebar.stats.likes }}</div>
        </div>
    </div>
</div>